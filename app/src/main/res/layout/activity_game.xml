<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.graduation.project.snakegame.SnakeView
        android:id="@+id/snake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/game_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/up"
        android:layout_alignEnd="@+id/up"
        android:layout_alignRight="@+id/up"
        android:layout_marginBottom="22dp"
        android:background="@drawable/start" />

    <ImageButton
        android:id="@+id/game_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/game_start"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/up"
        android:layout_toStartOf="@+id/up"
        android:background="@drawable/pause" />

    <ImageButton
        android:id="@+id/game_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/game_start"
        android:layout_marginLeft="33dp"
        android:layout_toEndOf="@+id/game_start"
        android:layout_toRightOf="@+id/game_start"
        android:background="@drawable/quit" />

    <ImageButton
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/down"
        android:layout_alignLeft="@+id/game_stop"
        android:layout_alignStart="@+id/game_stop"
        android:background="@drawable/left" />

    <ImageButton
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/game_quit"
        android:layout_alignTop="@+id/left"
        android:background="@drawable/right" />

    <ImageButton
        android:id="@+id/up"
        android:background="@drawable/up"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/down"
        android:layout_centerHorizontal="true"
        android:background="@drawable/down"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="170dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_show"
        android:layout_above="@id/game_start"
        android:layout_marginBottom="250dp"
        android:text="@string/snake_layout_text_text"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
